<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/nama_extras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multimedia"
        android:textColor="@color/textColorBlack"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/keterangan_extras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_extras"
        android:text="VLC, AIMP, Browser"
        android:textColor="@color/textColorBlack"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/check_extras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/harga_extras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_extras"
        android:layout_alignParentRight="true"
        android:text="Rp. 5.000"
        android:textColor="@color/textColorBlack"
        android:textSize="14sp" />

</RelativeLayout>